@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container" style="margin:0 auto;max-width:300px;padding:10px;">

    <h1 class="label-white text-center">Social Care</h1>
    <br />
    @using (Html.BeginForm("VerificaLogin", "Profissionais", FormMethod.Post))
    {
        if (ViewBag.ErroLogin != null)
        {
            <div class="alert alert-danger text-center" role="alert">
                @ViewBag.ErroLogin
            </div>
        }
        <div class="form-group" >
            @Html.LabelFor(model => model.login, new { @class = "label-white", style="font-size:large"})
            @Html.TextBoxFor(model => model.login,new { @class = "form-control", placeholder = "Entre com o login"})
            @Html.ValidationMessageFor(model => model.login,string.Empty,new { style = "color:red" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.senha, new { @class = "label-white", style = "font-size:large" })
            @Html.TextBoxFor(model => model.senha, new { @class = "form-control",placeholder = "Entre com a senha", type = "password" })
            @Html.ValidationMessageFor(model => model.senha, string.Empty, new { style = "color:red" })
        </div>

        <br />
        <button type="submit" class="btn btn-info" style="min-width:100%">Entrar</button>

    }

</div>

