@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container position-login">

					
    <h1 class="label-login-title text-center">Social Care</h1>
    <br />
    @using (Html.BeginForm("VerificaLogin", "Profissionais", FormMethod.Post))
    {
        if (ViewBag.ErroLogin != null)
        {
            <div class="alert alert-danger text-center" role="alert">
                @ViewBag.ErroLogin
            </div>
        }
        <div class="form-group" >
            @Html.LabelFor(model => model.login, new { @class = "label-login"})
            @Html.TextBoxFor(model => model.login, new { @class = "form-control", placeholder = "Entre com o login"})
            @Html.ValidationMessageFor(model => model.login,string.Empty,new { style = "color:red" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.senha, new { @class = "label-login" })
            @Html.TextBoxFor(model => model.senha, new { @class = "form-control",placeholder = "Entre com a senha", type = "password" })
            @Html.ValidationMessageFor(model => model.senha, string.Empty, new { style = "color:red" })
        </div>
        
        <br />
        <button type="submit" class="btn btn-info btn-login">Entrar</button>

    }

</div>

