                                            //Caso contrário, adiciona um ';' e o valor selecionado
                                            var listTags = targetInput.val();

                                            if (listTags[listTags.length - 1] == ";") {

                                            }

                                            if (listTags == "") {
                                                targetInput.val(ui.item.word);
                                            }
                                            else {
                                                targetInput.val(listTags + ";" + ui.item.word);
                                            }
                                        },
