@model IQueryable<TAB_VISITA>
@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color:#428bca;">Lista de visitas</h2>
<h4>Selecione um paciente para registrar a visita</h4>
<div class="list-group">

    @if(Model.Count() > 0) { 

        foreach (var visita in Model)
        {
            <a href="@Url.Action("Detalhes","Formulario",new { }) " class="list-group-item" disabled="disabled">
                <img src="https://success.salesforce.com/resource/1463788800000/sharedlayout/img/new-user-image-default.png" style="width:70px; height:70px;float:left; border-radius:20px" />
                <p><h3 style="padding-left:100px">@visita.TAB_PACIENTE.nom_paciente</h3></p>
                <p><h4 style="padding-left:100px">Visita para: @visita.dat_visita</h4></p>
            </a>
        }
    }
</div>

